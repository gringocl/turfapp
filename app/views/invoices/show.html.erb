<h1>Invoice #<%= @invoice.number %></h1>
<div class="large-8 columns">
  <div class='panel'>
    <table>
      <thead>
        <tr>
          <th colspan='3'><%= @invoice.customer.name %></th>
          <th colspan='2'><%= @invoice.created_at.strftime("%A %m/%d/%Y") %></th>
       </tr>
      </thead>
      <thead>
        <tr>
          <th>Code</th>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @invoice.invoice_items.each do |items| %>
        <tr>
          <td><%= items.product.code %></td>
          <td><%= items.product.name %></td>
          <td><%= items.quantity %></td>
          <td><%= items.product.price %></td>
          <td><%= items.subtotal %></td>
        </tr>
        <% end %>
      </tbody>
      <thead>
        <tr>
          <th colspan='4' id='total'>TOTAL</th>
          <th><%= @invoice.total %></th>
        </tr>
      </thead>
    </table>
  </div>
  <%= link_to 'Edit', edit_invoice_path(@invoice) %> |
  <%= link_to 'Back', invoices_path %>
</div>
<div class='large-4 columns'>
</div>


