<% flashes = {notice: 'success', alert: 'standard', error: 'alert', secondary: 'secondary'} %>
<% flashes.each do |key, value| %>
  <% if flash[key] %>
    <%= content_tag :div, :data => { :alert => '' }, :class => "alert-box #{value} radius" do %>
      <%= flash[key] %>
      <%= link_to '&times;'.html_safe, '#', :class => 'close'%>
    <% end %>
  <% end %>
<% end %>