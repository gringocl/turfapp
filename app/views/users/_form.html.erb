<fieldset>
  <%= simple_form_for @user, html: {class: 'custom'} do |f| %>
  <%= render 'errors' %>
  
  <%= f.input :first_name %><br>
  <%= f.input :last_name%><br>
  <%= f.input :email %><br>
  <%= f.input :password %><br>
  <%= f.input :password_confirmation %>


  <%= f.button :submit, class: 'radius' %>
  <% end %>
</fieldset>