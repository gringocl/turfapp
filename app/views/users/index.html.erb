  <div class="alert-box success radius"><%= notice %></div>
<% else %>
<% end %>

   <h1>All Users!</h1></li>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>E-Mail</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.phone %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Show', user, class: "button small radius secondary" %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: "button small radius" %></td>
              <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "button small radius alert" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

